{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./"]
      }
    },
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },
  "rules": {
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0
  }
}
